<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Full title</th>
      <th>Author</th>
      <th>Publisher</th>
      <th>Version</th>
      <th>Isbn</th>
      <th>Date published</th>
      <th>Original price</th>
      <th>Sale price</th>
      <th>Cover pic</th>
      <th>Tags</th>
      <th>Popularity</th>
      <th>Time added</th>
      <th>Description</th>
      <th>In stock</th>
      <th>Style</th>
      <th>Publication city</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.full_title %></td>
        <td><%= book.author %></td>
        <td><%= book.publisher %></td>
        <td><%= book.version %></td>
        <td><%= book.isbn %></td>
        <td><%= book.date_published %></td>
        <td><%= book.original_price %></td>
        <td><%= book.sale_price %></td>
        <td><%= book.cover_pic %></td>
        <td><%= book.tags %></td>
        <td><%= book.popularity %></td>
        <td><%= book.time_added %></td>
        <td><%= book.description %></td>
        <td><%= book.in_stock %></td>
        <td><%= book.style %></td>
        <td><%= book.publication_city %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

